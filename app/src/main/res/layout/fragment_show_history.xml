<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".View.Fragment.ShowHistoryFragment">

    <ImageButton
        android:id="@+id/bt_back"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:clickable="true"
        android:layout_marginTop="30sp"
        android:layout_toStartOf="@id/tv_showhistory"
        android:layout_marginEnd="60sp"
        android:background="@color/transparent"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/tv_showhistory"
        android:layout_width="wrap_content"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/segoeuibold"
        android:textColor="@color/colorBlack"
        android:text="@string/text_show_history"
        android:textSize="@dimen/font_small"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_height="40sp" />


    <ImageView
        android:id="@+id/tv_choose_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_showhistory"
        android:layout_marginTop="50sp"
        android:src="@drawable/car"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:id="@+id/sv_et"
        android:layout_below="@id/tv_choose_option"
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_titlemileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="10sp"
                android:background="@color/colornotification"
                android:text="@string/text_mileage"
                android:fontFamily="@font/segoeuisemibold"
                android:textSize="@dimen/font_small"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/tv_mileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colornotification"
                android:layout_alignEnd="@id/tv_titlemileage"
                android:layout_alignStart="@id/tv_titlemileage"
                android:layout_below="@id/tv_titlemileage"
                android:fontFamily="@font/segoeui"
                android:textSize="@dimen/font_small"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_titleavdrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tv_titlemileage"
                android:layout_alignStart="@id/tv_titlemileage"
                android:layout_below="@id/tv_mileage"
                android:layout_marginTop="20sp"
                android:background="@color/colornotification"
                android:text="@string/text_av_drive"
                android:fontFamily="@font/segoeuisemibold"
                android:textSize="@dimen/font_small"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/tv_av_drive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_titlemileage"
                android:layout_alignEnd="@id/tv_titlemileage"
                android:textSize="@dimen/font_small"
                android:fontFamily="@font/segoeui"
                android:background="@color/colornotification"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/tv_titleavdrive" />

            <TextView
                android:id="@+id/tv_titleengineoil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tv_titlemileage"
                android:layout_alignStart="@id/tv_titlemileage"
                android:layout_below="@id/tv_av_drive"
                android:layout_marginTop="20sp"
                android:text="@string/text_engine_oil"
                android:background="@color/colornotification"
                android:fontFamily="@font/segoeuisemibold"
                android:textSize="@dimen/font_small"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/tv_engine_oil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_titlemileage"
                android:layout_alignEnd="@id/tv_titlemileage"
                android:textSize="@dimen/font_small"
                android:background="@color/colornotification"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/tv_titleengineoil"/>

            <TextView
                android:id="@+id/tv_titleoilthickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tv_titlemileage"
                android:layout_alignStart="@id/tv_titlemileage"
                android:layout_below="@id/tv_engine_oil"
                android:layout_marginTop="20sp"
                android:text="@string/text_oil_thickness"
                android:background="@color/colornotification"
                android:fontFamily="@font/segoeuisemibold"
                android:textSize="@dimen/font_small"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/tv_oil_thickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:layout_alignStart="@id/tv_titlemileage"
                android:layout_alignEnd="@id/tv_titlemileage"
                android:textSize="@dimen/font_small"
                android:background="@color/colornotification"
                android:textColor="@color/colorBlack"
                android:layout_below="@id/tv_titleoilthickness"/>

            <Button
                android:id="@+id/bt_update"
                android:layout_width="190sp"
                android:layout_height="56sp"
                android:textAllCaps="false"
                android:text="@string/text_update"
                android:layout_below="@id/tv_oil_thickness"
                android:layout_marginTop="50sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/segoeuibold"
                android:textColor="@color/colorText"
                style="@style/ButtonStyle"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>