<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".View.Fragment.GuideFragment">

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="wrap_content"
        android:layout_marginTop="30sp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/car"/>

    <ImageButton
        android:id="@+id/bt_notification"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:clickable="true"
        android:layout_marginTop="30sp"
        android:layout_toEndOf="@id/iv_car"
        android:layout_marginStart="60sp"
        android:background="@color/transparent"
        android:src="@drawable/notification"/>

    <TextView
        android:id="@+id/tv_choose_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_car"
        android:layout_marginTop="70sp"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/tv_choose_option"
        android:textSize="@dimen/font_large"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/ll_interior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75sp"
        android:background="@color/transparent"
        android:layout_below="@id/tv_choose_option">
        <Button
            android:id="@+id/bt_interior"
            android:layout_width="190sp"
            android:layout_height="56sp"
            android:text="@string/text_interior"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/bahnschrift"
            style="@style/ButtonStyle"/>
        <Button
            android:id="@+id/bt_help1"
            android:layout_width="28sp"
            android:layout_marginStart="20sp"
            android:layout_height="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/text_help"
            android:textColor="@color/colorhelp"
            style="@style/ButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:background="@color/transparent"
        android:layout_below="@id/ll_interior">
        <Button
            android:id="@+id/bt_exterior"
            android:layout_width="190sp"
            android:layout_height="56sp"
            android:fontFamily="@font/bahnschrift"
            android:text="@string/text_exterior"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            style="@style/ButtonStyle"/>
        <Button
            android:id="@+id/bt_help2"
            android:layout_width="28sp"
            android:layout_marginStart="20sp"
            android:layout_height="28sp"
            android:text="@string/text_help"
            android:textStyle="bold"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorhelp"
            style="@style/ButtonStyle"/>
    </LinearLayout>

</RelativeLayout>