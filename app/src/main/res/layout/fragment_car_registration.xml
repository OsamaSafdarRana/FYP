<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".View.Fragment.CarRegistrationFragment">

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/car"/>

    <TextView
        android:id="@+id/tv_choose_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_car"
        android:layout_marginTop="40sp"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/tv_enter_details"
        android:textSize="@dimen/font_large"
        android:layout_centerHorizontal="true"/>
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30sp"
    android:layout_below="@id/tv_choose_option">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">
    <TextView
        android:id="@+id/tv_reg_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_reg_no"
        android:fontFamily="@font/bahnschrift"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorBlack"/>

    <AutoCompleteTextView
        android:id="@+id/et_reg_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:layout_below="@id/tv_reg_no"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        style="@style/EditTextStyle"
        android:textSize="@dimen/font_input"
        android:textColor="@color/colorBlack"
        android:hint="@string/text_reg_no"
        android:fontFamily="@font/bahnschrift"
        android:textColorHint="@color/colorTextGrey"/>

    <TextView
        android:id="@+id/tv_manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_manufacturer"
        android:layout_below="@id/et_reg_no"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/bahnschrift"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorBlack"/>

    <AutoCompleteTextView
        android:id="@+id/et_manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:layout_below="@id/tv_manufacturer"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        style="@style/EditTextStyle"
        android:textSize="@dimen/font_input"
        android:textColor="@color/colorBlack"
        android:hint="@string/text_manufacturer"
        android:fontFamily="@font/bahnschrift"
        android:textColorHint="@color/colorTextGrey"/>

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_model"
        android:layout_below="@id/et_manufacturer"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/bahnschrift"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorBlack"/>

    <AutoCompleteTextView
        android:id="@+id/et_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:layout_below="@id/tv_model"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        style="@style/EditTextStyle"
        android:textSize="@dimen/font_input"
        android:textColor="@color/colorBlack"
        android:hint="@string/text_model"
        android:fontFamily="@font/bahnschrift"
        android:textColorHint="@color/colorTextGrey"/>

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_year"
        android:layout_below="@id/et_model"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/bahnschrift"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorBlack"/>

    <AutoCompleteTextView
        android:id="@+id/et_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:layout_below="@id/tv_year"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        style="@style/EditTextStyle"
        android:inputType="number"
        android:textSize="@dimen/font_input"
        android:textColor="@color/colorBlack"
        android:hint="@string/text_year"
        android:fontFamily="@font/bahnschrift"
        android:textColorHint="@color/colorTextGrey"/>


    <TextView
        android:id="@+id/tv_variant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_variant"
        android:layout_below="@id/et_year"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/bahnschrift"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/colorBlack"/>

    <AutoCompleteTextView
        android:id="@+id/et_variant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50sp"
        android:layout_below="@id/tv_variant"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        style="@style/EditTextStyle"
        android:textSize="@dimen/font_input"
        android:textColor="@color/colorBlack"
        android:hint="@string/text_variant"
        android:fontFamily="@font/bahnschrift"
        android:textColorHint="@color/colorTextGrey"/>

        <Button
            android:id="@+id/bt_continue"
            android:layout_width="190sp"
            android:layout_height="56sp"
            android:textAllCaps="false"
            android:text="@string/text_continue"
            android:textStyle="bold"
            android:layout_below="@id/et_variant"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/bahnschrift"
            android:clickable="false"
            android:textColor="@color/colorBlack"
            style="@style/ButtonStyle"/>

    </RelativeLayout>
</ScrollView>

</RelativeLayout>