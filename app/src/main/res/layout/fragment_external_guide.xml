<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        tools:context=".View.Fragment.ExternalGuideFragment">

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:clickable="true"
            android:layout_marginTop="30sp"
            android:layout_toStartOf="@id/iv_car"
            android:layout_marginEnd="60sp"
            android:visibility="invisible"
            android:background="@color/transparent"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="wrap_content"
            android:layout_marginTop="30sp"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:src="@drawable/car"/>

        <ImageButton
            android:id="@+id/bt_notification"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:clickable="true"
            android:layout_marginTop="30sp"
            android:layout_toEndOf="@id/iv_car"
            android:layout_marginStart="60sp"
            android:background="@color/transparent"
            android:src="@drawable/notification"/>

        <TextView
            android:id="@+id/tv_choose_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_car"
            android:layout_marginTop="60sp"
            android:fontFamily="@font/bahnschrift"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/tv_choose_option"
            android:textSize="@dimen/font_large"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_side"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_below="@id/tv_choose_option"
            android:layout_marginTop="30sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/side"/>

        <ImageView
            android:id="@+id/iv_front"
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:layout_marginStart="20sp"
            android:layout_below="@id/iv_side"
            android:layout_marginTop="10sp"
            android:background="@color/transparent"
            android:src="@drawable/front"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/iv_side"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10sp"
            android:background="@color/transparent"
            android:src="@drawable/back"/>
    </RelativeLayout>