<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".View.Fragment.InternalGuideFragment">

    <ImageButton
        android:id="@+id/bt_back"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:clickable="true"
        android:layout_marginTop="30sp"
        android:layout_toStartOf="@id/iv_car"
        android:layout_marginEnd="60sp"
        android:visibility="invisible"
        android:background="@color/transparent"
        android:src="@drawable/ic_back"/>

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="wrap_content"
        android:layout_marginTop="30sp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/car"/>

    <ImageButton
        android:id="@+id/bt_notification"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:clickable="true"
        android:layout_marginTop="30sp"
        android:layout_toEndOf="@id/iv_car"
        android:layout_marginStart="60sp"
        android:background="@color/transparent"
        android:src="@drawable/notification"/>

    <TextView
        android:id="@+id/tv_choose_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_car"
        android:layout_marginTop="60sp"
        android:fontFamily="@font/bahnschrift"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/tv_choose_option"
        android:textSize="@dimen/font_large"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/iv_speedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_choose_option"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/speedometer"/>

    <ImageView
        android:id="@+id/iv_checkengine"
        android:layout_width="100sp"
        android:layout_height="70sp"
        android:layout_marginStart="50sp"
        android:layout_below="@id/iv_speedometer"
        android:layout_marginTop="50sp"
        android:background="@color/transparent"
        android:src="@drawable/checkengine"/>

    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="100sp"
        android:layout_height="70sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/iv_speedometer"
        android:layout_marginEnd="50sp"
        android:layout_marginTop="50sp"
        android:background="@color/transparent"
        android:src="@drawable/battery"/>

    <ImageView
        android:id="@+id/iv_handbrake"
        android:layout_width="100sp"
        android:layout_height="70sp"
        android:layout_below="@id/iv_checkengine"
        android:layout_alignStart="@id/iv_checkengine"
        android:layout_alignEnd="@id/iv_checkengine"
        android:layout_marginTop="30sp"
        android:background="@color/transparent"
        android:src="@drawable/handbrake"/>

    <ImageView
        android:id="@+id/iv_oil"
        android:layout_width="100sp"
        android:layout_height="70sp"
        android:layout_below="@id/iv_battery"
        android:layout_alignStart="@id/iv_battery"
        android:layout_alignEnd="@id/iv_battery"
        android:layout_marginTop="30sp"
        android:background="@color/transparent"
        android:src="@drawable/caroilpressure"/>

</RelativeLayout>